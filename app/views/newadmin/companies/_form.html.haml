= javascript_include_tag 'ckeditor/init'

= f.input :logo, as: :file
- if resource.logo.present?
  .input
    %label 已上传企业LOGO
    .fl
      = image_tag resource.logo.url,:size => "64"

= f.input :name
= f.input :site
= f.input :company_type
= f.input :donate_count

.input
  %label
    企业介绍
  .fl
    = f.input :intro, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} },label: false

.mt20
  = f.submit "提  交", class: "btn btn-primary"

:coffeescript
  $ ->
    setTimeout ->
      $("#sidebar").css("height",$("#main-container").height())
    ,2000

