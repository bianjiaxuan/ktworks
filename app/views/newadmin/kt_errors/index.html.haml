#main-container-title.clearfix{style: "height: 92px;"}
  %span.block.fl{style: "height: 48px; margin-top: 44px; #{'border: none;' if !params[:is_solve].blank? }"}
    = link_to "全部", newadmin_kt_errors_path,class: "grey9"
  %span.block.fl{style: "height: 48px; margin-top: 44px; #{'border: none;' if params[:is_solve] != '1' }"}
    = link_to "已解决", newadmin_kt_errors_path(:is_solve => 1),class: "grey9"
  %span.block.fl{style: "height: 48px; margin-top: 44px; #{'border: none;' if params[:is_solve] != '0' }"}
    = link_to "未解决", newadmin_kt_errors_path(:is_solve => 0),class: "grey9"
.mt20.clearfix
  .fl.ml20.pd20.font20{class: params[:klass] == "5" ? "byellow2" : "byellow1"}
    = link_to "微信后台", newadmin_kt_errors_path(:klass => 5),class: "grey7"
  .fl.ml10.pd20.font20{class: params[:klass] == "4" ? "byellow2" : "byellow1"}
