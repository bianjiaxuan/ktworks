  .fl.ml10.pd20.font20{class: params[:klass] == "3" ? "byellow2" : "byellow1"}
    = link_to "微信", newadmin_kt_errors_path(:klass => 3),class: "grey7"
  .fl.ml10.pd20.font20{class: params[:klass] == "2" ? "byellow2" : "byellow1"}
    = link_to "后台", newadmin_kt_errors_path(:klass => 2),class: "grey7"
  .fl.ml10.pd20.font20{class: params[:klass] == "0" ? "byellow2" : "byellow1"}
    = link_to "前台", newadmin_kt_errors_path(:klass => 0),class: "grey7"
  .fl.ml10.pd20.font20{class: params[:klass] == "1" ? "byellow2" : "byellow1"}
