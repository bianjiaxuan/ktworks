= javascript_include_tag "jquery"
= javascript_include_tag "lib/jquery.slides.min.js"

:css
  a.slidesjs-stop { display: none; }
  ul.slidesjs-pagination { display: none; }
  .slides { background-color: rgb(38,38,38); }

= image_tag("weixin/about/a_01.jpg",class: "block full-width")
= image_tag("weixin/about/a_02.jpg",class: "block full-width")
= image_tag("weixin/about/a_03.jpg",class: "block full-width")

.slides{style: "width: 100%;height: auto;"}
  - (1..4).to_a.each do |n|
    = image_tag("weixin/about/b_0#{n}.jpg", class: "full-width")
= image_tag("weixin/about/a_03.jpg",class: "block full-width")
.slides{style: "width: 100%;height: auto;"}
  - (1..2).to_a.each do |n|
    = image_tag("weixin/about/c_0#{n}.jpg", class: "full-width")
= image_tag("weixin/about/a_03.jpg",class: "block full-width")
.slides{style: "width: 100%;height: auto;"}
  - (1..3).to_a.each do |n|
    = image_tag("weixin/about/d_0#{n}.jpg", class: "full-width")
= image_tag("weixin/about/a_03.jpg",class: "block full-width")




:coffeescript
  $ ->
    $('.slides').slidesjs(
      height: 1465,
      play:
        active: true,
        auto: false,
        interval: 4000,
        swap: true
      ,
      callback:
        loaded: (number)->
          $("a.slidesjs-navigation").hide()
    )
