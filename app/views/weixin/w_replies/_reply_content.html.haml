- if params[:type] == "0"
  %textarea.middle{name: "w_reply[reply_content]"}
    = @reply.reply_content if @reply.present?
- if params[:type] == "1"
  %select{name: "w_reply[reply_content]"}
    - Material.order("created_at desc").each do |_item|
      %option{value: _item.id, selected: (@reply && _item.id == @reply.reply_content.to_i) ? true : false}= _item.name

- if params[:type] == "2"
  %select{name: "w_reply[reply_content]"}
    - MultipleMaterial.order("created_at desc").each do |_item|
      %option{value: _item.id, selected: (@reply && _item.id == @reply.reply_content.to_i) ? true : false}= _item.name

- if params[:type] == "3"
  %select{name: "w_reply[reply_content]"}
    - AudioMaterial.order("created_at desc").each do |_item|
      %option{value: _item.id, selected: (@reply && _item.id == @reply.reply_content.to_i) ? true : false}= _item.name