.clearfix
  .fl.w120
    = render "shared/weixin_sidebar"
  .fl.w860.ml20
    = render "tab"
    %table.table1
      %tr
        %th 关键字
        %th 内容
        %th 操作
      - _collection = collection.order("updated_at desc").page(params[:page]).per(10)
      - _collection.each_with_index do |_item|
        %tr{ class: cycle('odd', 'even') }
          %td= _item.keyword
          %td= _item.reply_type_name
          %td
            = link_to "编辑", edit_weixin_w_reply_path(_item)
            &nbsp;
            = link_to "删除", weixin_w_reply_path(_item), method: "delete",data: {confirm: '确定要删除吗？'}


    = paginate _collection

